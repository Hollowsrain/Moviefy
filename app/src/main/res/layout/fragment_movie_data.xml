<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.moviefy.Fragments.MovieData">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movie_image"
            android:layout_width="160dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="13dp"
            android:src="@android:color/transparent" />

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/movie_image"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/movie_image"
            android:layout_toRightOf="@+id/movie_image"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/waiting2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="... wait for a moment ..."
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/movie_rating"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_genre"
            android:layout_alignStart="@+id/movie_genre"
            android:layout_below="@+id/movie_genre"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/movie_director"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_rating"
            android:layout_alignStart="@+id/movie_rating"
            android:layout_below="@+id/movie_rating"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/movie_genre"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_name"
            android:layout_alignStart="@+id/movie_name"
            android:layout_below="@+id/movie_name"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/movie_writers"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_stars"
            android:layout_alignStart="@+id/movie_stars"
            android:layout_below="@+id/movie_stars"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/movie_stars"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_director"
            android:layout_alignStart="@+id/movie_director"
            android:layout_below="@+id/movie_director"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/movie_storyLine"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_description"
            android:layout_alignStart="@+id/movie_description"
            android:layout_below="@+id/movie_description"
            android:maxLines="13"
            android:scrollbars="vertical"
            android:textAlignment="textStart"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/movie_image"
            android:layout_alignStart="@+id/movie_image"
            android:layout_below="@+id/movie_image"
            android:textAlignment="textStart"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>
</FrameLayout>
